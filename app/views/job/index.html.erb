<% title "Jobs Monitoring", "Running jobs and statistics" %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Status</th>
			<th>Dashboard</th>
			<th>Chart</th>
		</tr>
	</thead>
	<tbody>
		<% @enqueued_jobs.each_with_index do |job, index| %>
			<tr class="<%= 'info' if job.status == :running %>">
				<td><%= index + 1 %></td>
				<td><%= job.status_with_duration %></td>
				<td><%= job.dashboard_name %></td>
				<td><%= job.chart_name %></td>
			</tr>
		<% end %>	
	</tbody>
</table>
